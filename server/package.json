{
  "name": "server",
  "description": "Server",
  "scripts": {
    "start": "yarn run serve",
    "start:db": "docker run --rm -p 27017:27017 --name speaky-db --volume speaky-db:/data/db mongo:4.0.10 > '/dev/null' || docker stop speaky-db || true",
    "build": "yarn run build-ts",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Mongo,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run start:db\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" yarn run serve-debug\"",
    "generate": "graphql-codegen"
  },
  "dependencies": {
    "@shelf/jest-mongodb": "^1.1.3",
    "apollo-server": "^2.9.3",
    "apollo-server-express": "^2.9.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-scalars": "^1.0.4",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.5",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "1.5.0",
    "lodash": "^4.17.15",
    "mongodb": "^3.3.1",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.8.3",
    "@graphql-codegen/cli": "^1.7.0",
    "@graphql-codegen/typescript": "^1.7.0",
    "@graphql-codegen/typescript-resolvers": "^1.7.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/lodash": "^4.14.134",
    "@types/mongodb": "^3.3.1",
    "@types/node-fetch": "^2.5.4",
    "@types/winston": "^2.3.9",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.0.0",
    "mongodb-memory-server": "^6.1.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.0",
    "typescript": "^3.7.3"
  },
  "jest": {
    "globalSetup": "./node_modules/@shelf/jest-dynamodb/setup.js",
    "globalTeardown": "./node_modules/@shelf/jest-dynamodb/teardown.js"
  }
}
